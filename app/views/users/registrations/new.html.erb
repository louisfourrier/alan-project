<%= provide(:title, "Inscription Entreprise - Alan") %>
<%= provide(:description, "Inscrivez vous à l'assurance Alan en deux clics") %>

<% provide(:no_search_bar, true)%>
<%= provide(:no_margin, true) %>
<% provide(:notice_container, true) %>

<section class="back-image-landing back-green margin-top-20">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 col-sm-offset-3 grey-background padding-20 background-opacity margin-top-100 ">

        <% flash.each do |key, value| %>
        <div class="alert alert-warning alert-<%= key %>  text-center">
          <strong><%= value %></strong>
        </div>
        <% end %>

        <h2 class="text-center text-dark-blue text-uppercase">Inscription Entreprise</h2>

        <hr class="landing-hr hr-dark-blue"/>



        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :first_name, "Votre prénom", class: "text-uppercase text-dark-blue" %>
          <br/>
          <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :last_name, "Votre nom", class: "text-uppercase text-dark-blue" %>
          <br/>
          <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :company_name, "Nom de votre entreprise", class: "text-uppercase text-dark-blue" %>
          <br/>
          <%= f.text_field :company_name, autofocus: true, class: "form-control" %>
        </div>


        <div class="form-group">
          <%= f.label :email, "Votre adresse mail", class: "text-uppercase text-dark-blue" %>
          <br/>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Mot de passe" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caractères minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control"  %>
        </div>

        <div class="form-group">
        <%= f.label :password_confirmation, "Confirmation Mot de passe"  %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
      </div>



        <div class="actions text-center">
          <%= f.submit "Inscription à Alan", class: "btn btn-primary btn-lg no-border-radius  text-uppercase btn-block" %>
        </div>
        <% end %>

        <div class="margin-top-10">

          <%= render "users/shared/links" %>
        </div>

      </div>
    </div>
  </div>

</section>
