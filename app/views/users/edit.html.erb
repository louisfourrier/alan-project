<%= provide(:main_title, "Préférences de votre compte" ) %>
<%= content_for(:breadcrumb) do %>
<li>
<%= link_to "Accueil", current_user %>
</li>

<li class="active">
<strong>Préférences de votre compte</strong>
</li>
<% end %>


<div class="row">
  <div class="col-md-12">
  <div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox-content m-b-sm border-bottom">




        <div class="p-xs">
            <div class="pull-left m-r-md">
                <i class="fa fa-cogs text-navy mid-icon"></i>
            </div>
            <h2>Modifier toutes les informations de votre compte Entreprise</h2>
            <span>Toutes les modifications relatives à votre compte entreprise se font ici (à l'exception du choix du package assurance)</span>
        </div>


    </div>
    <%= render 'form' %>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">

                <div class="ibox-content">
                  <h2 class="page-header">Préférences notifications</h2>
                    <form method="get" class="form-horizontal">


                        <div class="form-group"><label class="col-sm-2 control-label">Envois Emails <br/>
                            <small class="text-navy">Les emails pour vous notifier des activités sur Alan</small></label>

                            <div class="col-sm-10">
                                <div><label> <input type="checkbox" value=""> Option 1 </label></div>
                                <div><label> <input type="radio" checked="" value="option1" id="optionsRadios1" name="optionsRadios"> Option 2
                                     </label></div>
                                <div><label> <input type="radio" value="option2" id="optionsRadios2" name="optionsRadios"> Option 2 bis
                                   </label></div>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>


                        <div class="form-group"><label class="col-sm-2 control-label">Envois SMS</label>

                            <div class="col-sm-10">

                                <div class="i-checks"><label> <input type="radio" value="option1" name="a"> <i></i> Option 1 </label></div>
                                <div class="i-checks"><label> <input type="radio" checked="" value="option2" name="a"> <i></i> Option 2</label></div>

                            </div>
                        </div>





                        <div class="hr-line-dashed"></div>
                        <div class="form-group text-center">


                                <button class="btn btn-primary btn-lg text-center" type="submit">Sauvegarder</button>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">

                <div class="ibox-content">

                  <%= link_to "Modifier vos identifiants", edit_user_registration_path, class: "btn btn-primary btn-lg" %>

                </div>

              </div>
            </div>
          </div>

  </div>
  </div>
</div>
