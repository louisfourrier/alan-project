<%= provide(:title, "Connexion Adminsitrateur - Alan") %>
<%= provide(:description, "Connectez vous à votre compte Alan pour accéder à votre interface de gestion") %>

<% provide(:no_search_bar, true)%>
<%= provide(:no_margin, true) %>
<% provide(:notice_container, true) %>

<section class="back-image-landing back-green ">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 col-sm-offset-3 grey-background padding-20 background-opacity margin-top-100  ">

        <% flash.each do |key, value| %>
        <div class="alert alert-warning alert-<%= key %>  text-center">
          <strong><%= value %></strong>
        </div>
        <% end %>

        <h2 class="text-center text-dark-blue text-uppercase">Connexion Entreprise</h2>

        <hr class="landing-hr hr-dark-blue"/>



        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-hd-big"}) do |f| %>
        <div class="form-group">
          <%= f.label :email, "Votre adresse mail", class: "text-uppercase text-dark-blue" %>
          <br/>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Mot de passe", class: "text-uppercase text-dark-blue" %>
          <br/>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Se souvenir de moi", class: "text-uppercase text-dark-blue" %>
        </div>
        <% end -%>

        <div class="actions text-center">
          <%= f.submit "Se connecter", class: "btn btn-primary btn-lg no-border-radius btn-dark-blue text-uppercase btn-block" %>
        </div>
        <% end %>

        <div class="margin-top-10">

          <%= render "users/shared/links" %>
        </div>

      </div>
    </div>
  </div>

</section>
