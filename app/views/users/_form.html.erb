<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">

      <div class="ibox-content">

        <h2 class="page-header">Informations générales</h2>
        <%= form_for(@user,  html: {class: "form-horizontal"}) do |f| %>
        <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %>
            prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <div class="form-group">
          <%= f.label :first_name, "Prénom", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="form-group">
          <%= f.label :last_name, "Nom", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="form-group">
          <%= f.label :company_name, "Nom de l'entreprise", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :company_name, class: "form-control" %>
          </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="form-group">
          <%= f.label :company_domain, "Domaine de l'entreprise", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :company_domain, class: "form-control" %>
          </div>
        </div>
        <div class="hr-line-dashed"></div>

        <div class="actions text-center">
          <%= f.submit "Mettre à jour", class: "btn btn-primary btn-lg" %>
        </div>

        <% end %>

    </div>
  </div>
</div>
</div>
